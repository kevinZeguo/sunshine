#set($layout = "layout_sunshine_en.vm")
<style>
    .help-block {
        font-family: 宋体 !important;
        font-size: 9px !important;
        color: red;
        width: 240px;
        float: right;
    }
</style>
<div class="hcr1">
    <div class="r01">
        <div class="r01l">Fill in order information</div>
        <div class="r01r"><a href="http://www.soluxehotelniamey.com">首页</a> &gt; <a href="/room.html">Online booking</a>
            &gt;
            Fill in order information
        </div>
    </div>
    <form id="orderForm">
        <div class="oi bgColor" style="background-color: gainsboro;width: 100%">Room information</div>
        <div class="" id="rinfo" style="border: 1px solid slategray">
            <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin: 20px 10px 10px 10px;">
                <tbody>
                <tr>
                    <td>
                        <div></div>
                    </td>
                    <td>
                        <div>&nbsp;</div>
                    </td>
                <tr>
                <tr style="height: 20px">
                    <td width="12%">
                        room type:
                    </td>
                    <td width="90%">
                        <strong>$!{room.typeName}</strong>
                    </td>
                </tr>
                <tr style="height: 20px">
                    <td width="12%">
                        Bed type:
                    </td>
                    <td width="85%">
                        <strong>$!{room.badType}</strong>
                    </td>
                </tr>
                <tr style="height: 20px">
                    <td width="12%">
                        breakfast:
                    </td>
                    <td width="85%">
                        <strong>$!{room.breakfast}</strong>
                    </td>
                </tr>
                <tr style="height: 20px">
                    <td width="12%">
                        network:
                    </td>
                    <td width="85%">
                        <strong>$!{room.network}</strong>
                    </td>
                </tr>
                <tr style="height: 20px">
                    <td width="12%">
                        floor:
                    </td>
                    <td width="85%">
                        <strong>$!{room.floor}</strong>
                    </td>
                </tr>
                <tr style="height: 20px">
                    <td width="12%">
                        comment:
                    </td>
                    <td width="85%">
                        <strong>$!{room.typeNote}</strong>
                    </td>

                </tr>
                </tbody>
            </table>
        </div>
        <div class="oi bgColor" id="brrp"
             style="background-color: gainsboro;width: 100%;margin-top: 5px;margin-left: 1px">$!{room.typeName}</div>
        <div style="display:none;">
            <input type="hidden" id="typeId" name="typeId" value="$!{room.typeId}">
            <input type="hidden" id="startDate" name="startDate" value="$!{startDate}">
            <input type="hidden" id="endDate" name="endDate" value="$!{endDate}">
            <input type="hidden" id="numRetainRooms" name="numRetainRooms" value="$!{room.numRetainRooms}">
            <input id="env" name="env" type="hidden" value="en">
        </div>
        <div class="" style="border: 1px solid slategray">
            <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin-left: 10px">
                <tbody>
                <tr>
                    <td style="width:12%; height:30px;">The room number：</td>
                    #if($!{countList.size()}  > 0 && $!{room.perStatus} ==1 )
                        <td><select name="orderNumRooms" style="width: 60px" id="orderNumRooms">
                            #foreach($!{rCount} in $!{countList} )
                                <option value="$!{rCount}">$!{rCount}</option>
                            #end
                        </select>
                        </td>
                    #else
                        <td>
                            Sorry, the room is full!
                        </td>
                    #end

                </tr>
                </tbody>
            </table>
            <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin-left: 10px">
                <tbody id="inCountHtml">
                <tr>
                    <td style="width:12%; height:30px;">room1：</td>
                    #if($!{countList.size()}  > 0)
                        <td><select name="inCount" style="width: 60px" id="inCount">
                            <option value="1" selected>1</option>
                            <option value="2">2</option>
                        </select> people
                        </td>
                    #else
                        <td>
                            Sorry, the room is full!
                        </td>
                    #end
                </tr>
                </tbody>
            </table>

            <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin-left: 10px">
                <tbody>
                <tr>
                    <td style="width:12%; height:30px;">Check-in time：</td>
                    <td>$!{fmtStartDate}To stay in，$!{fmtEndDate}check out
                    </td>
                </tr>
                <tr>
                    <td style="width:12%; height:30px;">Rate in total：</td>

                    <td>
                        <input type="hidden" id="sumSalePrice" name="sumSalePrice" value="$!{room.salePrice1}">
                        <input type="hidden" id="salePirce" name="salePrice" value="$!{room.salePrice}">
                        <input type="hidden" id="salePirce1" name="salePrice1" value="$!{room.salePrice1}">
                        <input type="hidden" id="salePirce2" name="salePrice2" value="$!{room.salePrice2}">
                        <span class="price popup" id="totalPrice"> $!{room.salePrice1}</span> XOF
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="oi bgColor" id="brrp"
             style="background-color: gainsboro;width: 100%;margin-top: 5px;margin-left: 1px">Check-in information
        </div>
        <div class="" style="border: 1px solid slategray">
            <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin-left: 10px">
                <tbody>
                <tr>
                    <td style="width:12%; height:30px;">The guest's name <span class="color1">*</span></td>
                    <td class="form-group1">
                        <div class="names form-control1" id="names">
                            <input id="username" name="username" placeholder="User name, such as: zhang SAN."
                                   type="text"
                                   class="text color3"> <span
                                class="color3">mandatory</span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="width:12%; height:30px;">E-mail</td>
                    <td class="form-group1">
                        <div class="form-control1">
                            <input placeholder="Please enter email" id="email" name="email" type="text" class="text">
                            <span
                                    class="color3">The sales department will confirm with you via E-mail.</span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="width:12%; height:30px;">Contact phone</td>
                    <td class="form-group1">
                        <div class="form-control1">
                            <input id="telephone" name="telephone" placeholder="Please enter your contact number."
                                   type="text" class="text">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="width:12%; height:30px;">The latest time to shop.</td>
                    <td><select style="width: 100px;" id="lateArriTime" name="lateArriTime">
                        <option value="12:00 before">12:00 before</option>
                        <option value="13:00">13:00</option>
                        <option value="14:00">14:00</option>
                        <option value="15:00">15:00</option>
                        <option value="16:00">16:00</option>
                        <option value="17:00">17:00</option>
                        <option value="18:00" selected="selected">18:00</option>
                        <option value="19:00">19:00</option>
                        <option value="20:00">20:00</option>
                        <option value="21:00">21:00</option>
                        <option value="22:00">22:00</option>
                        <option value="23:00">23:00</option>
                        <option value="23:59">23:59</option>
                        <option value="The next day,1:00">The next day,1:00</option>
                        <option value="The next day,2:00">The next day,2:00</option>
                        <option value="The next day,3:00">The next day,3:00</option>
                        <option value="The next day,4:00">The next day,4:00</option>
                        <option value="The next day,5:00">The next day,5:00</option>
                    </select>
                        <span class="color3">(Please check in before the latest time.)</span>
                    ##                            ，有<span id="teshu" class="teshu">特殊需求</span></span>
                    </td>
                </tr>
                <tr>
                    <td style="width:12%; height:30px;">Special requirements</td>
                    <td class="form-group1">
                        <div class="form-control1">
                            <textarea placeholder="Please enter special requirements." id="comment" name="comment"
                                      cols="70" rows="4"></textarea>
                        </div>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="oii" style="margin-top: 20px;">
            <input type="hidden" id="needCcv" name="needCcv" value="0">
            <input type="hidden" id="canSubmit" name="canSubmit" value="1">
            <input id="subOrder" type="submit" value="submit" class="submit-btn">
        </div>
    </form>
</div>

<script src="/plug-in/public/hotel/order_en.js?_dc=$!{staticVersion}"></script>
